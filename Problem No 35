/*
Medium of an array
Topic Array
Question link https://practice.geeksforgeeks.org/problems/find-the-median0527/1
Time Complexity O(NlogN)
Space Complexity O(1)
*/

class Solution
{
public:
	public:
		int find_median(vector<int> v)
		{
		    sort(v.begin(),v.end());
		    int n=v.size();
		    if(n%2==0)
		    {
		        return (v[n/2]+v[n/2-1])/2;
		    }
		    else
		    {
		        return v[n/2];
		    }
		}
};
